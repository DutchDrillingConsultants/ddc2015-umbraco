    <div class="site-wrapper" data-constructor="OffCanvas">
        <div class="canvas-wrapper">
            <a href="#" class="toggle-nav">Show menu</a>
            <div itemscope itemtype="http://schema.org/Organization" class="site-logo cf">
                <a itemprop="url" href="/">
                    <img src="@Url.Content("~/Content/images/logoDDC.svg")" alt="ddc company logo" />
                </a>
            </div>
            <div class="site-menu">
                <header class="header" role="banner">
                    <div itemscope itemtype="http://schema.org/Organization" class="site-logo cf">
                        <a itemprop="url" href="/">
                            <img src="@Url.Content("~/Content/images/logoDDC.svg")" alt="ddc company logo" />
                        </a>
                    </div>
                    <nav class="main-navigation" role="navigation" data-constructor="Navigation" itemscope itemtype="http://schema.org/SiteNavigationElement">
                        <ul>
                            <li class="main-navigation__first" aria-haspopup="true" tabindex="0">
                                Who we are
                                <ul aria-hidden="true" aria-label="submenu">
                                    @foreach (var node in whoWeAre)
                                    {
                                        <li itemprop="name"><a itemprop="url" href="@node.Url" title="@node.Name">@node.Name</a></li>
                                    }
                                </ul>
                            </li>
                            <li class="main-navigation__first" aria-haspopup="true" tabindex="0">
                                What we do
                                <ul aria-hidden="true" aria-label="submenu">
                                    @foreach (var node in whatWeDo)
                                    {
                                        <li itemprop="name"><a itemprop="url" href="@node.Url" title="@node.Name">@node.Name</a></li>
                                    }                                    
                                </ul>
                            </li>
                            <li itemprop="name"><a href="/contact" title="contact">Contact</a></li>
                        </ul>
                    </nav>
                </header>
            </div>
            <main role="main" class="main home">
                @RenderBody()
            </main>
        </div>
        <footer role="contentinfo">
            <div class="grid border-top">
                <div class="container">
                    <ul class="social-list">
                        <li class="social-list--item company-compliance">
                            Chamber of Commerce: Rotterdam No.: 24290005 <br />
                            VAT: NL8182.16.207.B01
                        </li>
                        <li class="social-list--item"><a target="_blank" href="https://www.linkedin.com/company/dutch-drilling-consultants-b.v.?trk=biz-companies-cym" aria-label="twitter-icon"><i class="icon-twitter3"></i>Twitter</a></li>
                        <li class="social-list--item"><a target="_blank" href="https://twitter.com/DDC_drilling" aria-label="linkedin-icon"><i class="icon-linkedin"></i>Linkedin</a></li>
